{% extends 'base.html.twig' %}


{% block title %}
	{{category.name}}
{% endblock %}

{% block body %}
	{% if app.user %}
		<div class="example-wrapper">
			<h2>Ici on parle de
				{{ category.name }}</h2>


			<ul>
				{% for topic in topics %}
					{% if topic.islocked == true %}
						{% else %}
							<h3>
								<a href="{{ path('topic', {'slug' : topic.slug, 'category' : category.slug } ) }} ">{{ topic.title }}</a>
							</h3>
					{% endif %}
				{% endfor %}
			</ul>

			<div>


				<button>nouveau</button>

				{{ form_start(Topicform) }}
				{{ form_row(Topicform.title) }}
				{{ form_row(Topicform.content) }}
				{# {{ form_row(Topicform.post) }} #}
				<button type="submit" class="btn">Evoyer</button>
				{{ form_end(Topicform) }}
			</div>

		</div>
	{% else %}

		<h2>
			Veuillez vous connecter pour acc√©der au forum
		</h2>

	{% endif %}
{% endblock %}
